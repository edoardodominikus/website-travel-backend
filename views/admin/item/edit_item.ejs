<div class="tab-pane fade show active mt-2" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
    <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Title</label>
            <input type="text" class="form-control" id="title" name="title" value = "<%= item.title %>" placeholder="Enter title" required>
        </div>
        <div class="form-group">
            <label for="name">Price</label>
            <input type="number" class="form-control" id="price" name="price" value = "<%= item.price %>" placeholder="Enter price" required>
        </div>
        <div class="form-group">
            <label for="name">City</label>
            <input type="text" class="form-control" id="city" name="city" value = "<%= item.city %>" placeholder="Enter city" required>
        </div>
        <div class="form-group">
            <label for="name">Category</label>
            <select class="form-control" name="categoryId" id="">
                <option value ="<%= item.categoryId._id %>"><%= item.categoryId.name %></option>
                <% for(let i=0 ; i<category.length; i++){ %>
                    <option value="<%= category[i].id%>"><%= category[i].name%></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" class="form-control" id="image" name="image" multiple>
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <textarea name="about" id="about" class="form-control" value="<%= item.description %>"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
